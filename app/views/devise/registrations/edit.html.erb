<%= render "shared/navbar" %>
<div class="container px-4 my-3">

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      <%= f.input :current_password,
                  label: "Тековна лозинка",
                  hint: "ни треба вашата сегашна лозинка за да се зачуваат промените",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <a href="#collapse" class="btn text-center w-100 text-primary" data-bs-toggle="collapse">Промени лозинка</a>
      <div class="collapse" id="collapse">
      <%= f.input :password,
                  label: "Нова лозинка",
                  hint: "оставете празно ако не сакате да ја менувате лозинката",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Потврди лозинка",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Ажурирај", class: "btn btn-primary w-100 text-white my-3 btn-lg" %>
    </div>
  <% end %>

</div>
