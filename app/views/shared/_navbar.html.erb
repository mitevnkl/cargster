<div class="container p-4">
  <div class="d-flex justify-content-between align-items-center">
    <%= image_tag "logoo.png", style: "width: 2rem; border-radius: 0.5rem;", class: "" %>

    <p class="fw-bolder m-0"><%= @page_name ||
      if current_page?(new_user_session_path)
        "Најава"
      elsif current_page?(new_user_registration_path)
        "Регистрација"
      elsif current_page?(new_user_password_path)
        "Заборавена лозинка"
      elsif current_page?(edit_user_registration_path)
        "Профил"
      end
    %></p>

    <button class="border-0" style="background-color: rgb(244,244,244);" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
      <i class="fa-solid fa-lg fa-bars text-primary" style=""></i>
    </button>
  </div>

  <div class="collapse" id="collapseExample">
    <%= link_to "Дома", root_path, class: "btn w-100 my-3" %>

    <% if !user_signed_in? %>
      <%= link_to "Најава", new_user_session_path, class: "btn w-100 mb-3" %>
      <%= link_to "Регистрација", new_user_registration_path, class: "btn w-100" %>
    <% else %>
      <%= link_to "Нов оглас", new_truck_path, class: "btn w-100 mb-3" %>
      <%= link_to "Мои огласи", trucks_path, class: "btn w-100 mb-3" %>
      <%= link_to "Профил", profile_path, class: "btn w-100 mb-3" %>
      <%= link_to "Одјава", destroy_user_session_path,  data: { turbo_method: :delete } , class: "btn w-100" %>
    <% end %>
  </div>
</div>
