<div class="bg-white rounded-sm pt-4 pb-3 px-4 mb-3 shadow-sm">
  <div class="row">
    <div class="col-6">
      <% if @truck.user == current_user %>
        <% if !@truck.status? %>
        <p class="fw-bold text-primary"><small>ACTIVE</small></p>
        <% else %>
        <p class="fw-bold text-danger"><small>SOLVED</small></p>
        <% end %>
      <% else %>
      <p class="fw-bold"><%= @truck.user.email %></p>
      <% end %>
    </div>
    <div class="col-6">
      <p class="text-muted text-end"><small><%= @truck.ago %></small></p>
    </div>
  </div>
  <div class="row">
    <div class="col-6">
      <p class="my-0 text-truncate"><span><%= image_tag "countries/#{@truck.pickup.country}.svg", style: "width: 1.15rem; border-radius: 1rem; margin-bottom: 0.15rem;" %></span> <%= @truck.pickup.place.split.first[0...-1] %></p>
    </div>
    <div class="col-6">
      <p class="m-0 text-end"><%= @truck.dropoff.place.split.first[0...-1] %><span> <%= image_tag "countries/#{@truck.dropoff.country}.svg", style: "width: 1.15rem; border-radius: 1rem; margin-bottom: 0.15rem;" %></span></p>
    </div>
  </div>
  <div class="d-flex flex-wrap mt-3">
  <p class="tag-pill"><small><%= @truck.loading_date.try(:strftime, ("%b %e, %a")) %></small></p>
  <% @truck.tags.each do |truck| %>
    <p class="tag-pill"><small><%= truck %></small></p>
  <% end %>
  <p class="tag-pill"><small><%= @truck.length %><%= "m" %></small></p>
  </div>
</div>
