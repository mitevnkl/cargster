<div class="px-4 mt-4 mb-1 d-flex justify-content-center align-items-center">
  <%= link_to edit_user_registration_path, class: "mx-2" do %>
    <p class="bg-white shadow-sm text-center p-3 rounded-4"><span class="fa fa-solid fa-edit text-primary fa-lg"></span></p>
    <p class="action-text"><small>Измени</small></p>
  <% end %>
  <%= link_to destroy_user_session_path, data: { turbo_method: :delete }, class: "mx-2" do %>
    <p class="bg-white shadow-sm text-center p-3 rounded-4"><span class="fa fa-solid fa-right-from-bracket text-danger fa-lg"></span></p>
    <p class="action-text"><small>Одјава</small></p>
  <% end %>
</div>
<div class="px-4">
  <hr style="margin-top: -0.15rem;">
  <p class="fw-bolder" style= "margin-left: 2.5rem;"><small>ЗА МЕНЕ</small></p>
  <% if current_user.profile_complete? %>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="text-center fa fa-solid fa-user text-primary"></span></p>
    <p class="mx-3"><%= @user.first_name %> <%= @user.last_name %></p>
  </div>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="text-center fa fa-solid fa-building text-primary"></span></p>
    <p class="mx-3"><%= @user.company %></p>
  </div>
  <% end %>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="text-center fa fa-solid fa-envelope text-primary"></span></p>
    <p class="mx-3"><%= @user.email %></p>
  </div>
  <% if current_user.profile_complete? %>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="text-center fa fa-solid fa-phone text-primary"></span></p>
    <p class="mx-3"><%= @user.phone_number %></p>
  </div>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="mx-1 text-center fa fa-solid fa-location-arrow text-primary"></span></p>
    <p class="mx-3"><%= @user.address %></p>
  </div>
  <div class="d-flex">
    <p class="text-center" style="width: 1.5rem;"><span class="mx-1 text-center fa fa-solid fa-book text-primary"></span></p>
    <p class="mx-3"><%= @user.coc %> (MБ) <br> <%= @user.vat %> (ДБ)</p>
  </div>
  <% end %>
</div>
